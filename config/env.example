# Database
DATABASE_URL=postgresql://user:password@localhost/resume_analyser_production
RESUME_ANALYSER_DATABASE_PASSWORD=your_db_password

# Redis for Sidekiq
REDIS_URL=redis://localhost:6379/0

# Rails
RAILS_ENV=production
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=generated_by_render
RAILS_LOG_TO_STDOUT=enabled
RAILS_SERVE_STATIC_FILES=enabled
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# JWT Authentication
DEVISE_JWT_SECRET_KEY=generated_by_render

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Sidekiq Dashboard Authentication
SIDEKIQ_USERNAME=admin
SIDEKIQ_PASSWORD=strong_password_here

# Frontend CORS
FRONTEND_URL=https://your-angular-app.com

# Render (auto-set by Render)
RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Email (if using SMTP)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=gmail.com
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
