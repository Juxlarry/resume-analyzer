# Database
DATABASE_URL=postgresql://user:password@localhost/resume_analyser_production
RESUME_ANALYSER_DATABASE_PASSWORD=your_db_password

# Redis for Sidekiq
REDIS_URL=redis://localhost:6379/0

# Rails
RAILS_ENV=production
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=generated_secret_key_base
RAILS_LOG_TO_STDOUT=enabled
RAILS_SERVE_STATIC_FILES=enabled
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2
ACTIVE_STORAGE_SERVICE=amazon

# Active Storage (S3 / S3-compatible)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=your_bucket_name
# Optional for S3-compatible providers (Cloudflare R2, MinIO, etc.)
AWS_ENDPOINT=
AWS_FORCE_PATH_STYLE=false

# Railway Bucket generated variable names (supported as fallbacks)
# AWS_DEFAULT_REGION=us-west-1
# AWS_S3_BUCKET_NAME=your_bucket_name
# AWS_ENDPOINT_URL=https://<bucket-endpoint>

# JWT Authentication
DEVISE_JWT_SECRET_KEY=generated_jwt_secret_key

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Sidekiq Dashboard Authentication
SIDEKIQ_USERNAME=admin
SIDEKIQ_PASSWORD=strong_password_here

# Frontend CORS
FRONTEND_URL=https://your-angular-app.com
FRONTEND_URLS=https://your-angular-app.com,https://your-vercel-preview.vercel.app
VERCEL_PROJECT_PREFIX=resume-analyzer

# Public host
RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app

# Email (if using SMTP)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=gmail.com
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
